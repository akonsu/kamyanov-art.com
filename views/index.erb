<%# -*- mode:jinja2; coding:utf-8; -*- %>
<!DOCTYPE html>
<html ng-app="app">
  <head>
    <meta charset="utf-8" />
    <meta name="author" content="Игорь Камянов" />
    <meta name="description" content="Официальный сайт художника Игоря Камянова." />
    <meta name="robots" content="index,follow" />
    <meta name="revisit-after" content="14 days" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Художник Игорь Камянов</title>
    <link rel="stylesheet" media="screen" href="/css/screen.css" />
    <link rel="stylesheet" media="only screen and (min-width: 480px)" href="/css/screen-480.css" />
    <link rel="stylesheet" media="only screen and (min-width: 768px)" href="/css/screen-768.css" />
    <link rel="stylesheet" media="only screen and (min-width: 992px)" href="/css/screen-992.css" />
    <link rel="stylesheet" media="only screen and (min-width: 1382px)" href="/css/screen-1382.css" />
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular-resource.min.js"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular-sanitize.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
    <script type="text/javascript" src="/js/controllers.js"></script>
    <script type="text/javascript" src="/js/services.js"></script>
  </head>
  <body>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-9811055-5']);
      _gaq.push(['_setDomainName', 'kamyanov-art.com']);
      _gaq.push(['_trackPageview']);
      (function () {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    <div id="container">
      <div id="navbar" ng-controller="navContr">
        <div id="caption" ng-switch on="is_root()">
          <span ng-switch-when="true">{{caption}}</span>
          <a ng-switch-default href="#/">{{caption}}</a>
        </div>
        <ul id="sections">
          <li ng-repeat="section in sections" ng-switch on="section_active(section)">
            <span ng-switch-when="true">{{section.name}}</span>
            <a ng-switch-default ng-href="#/{{section.url}}">{{section.name}}</a>
          </li>
        </ul>
      </div>
      <div id="content">
        <div id="view" ng-view></div>
        <div id="footer"><span class="copyright-char">&copy;</span>Игорь Камянов</div>
      </div>
    </div>
  </body>
</html
